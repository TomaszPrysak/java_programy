package java_dzien_pierwszy_cwiczenia;

public class Cwiczenie_J8_J9_J {

	public static void main(String[] args) {
		
		String pierwszy = "Wpad³a bomba do piwnicy ";
		String drugi = "napisa³a na tablicy";
		String trzeci = pierwszy + drugi;
		
		String czwarty = trzeci + " raz dwa trzy, idziesz ty!!!";
		
		StringBuffer piaty = new StringBuffer(trzeci);
		piaty.append(" buahahaha");
		
		System.out.println(trzeci.toUpperCase());
		System.out.println(czwarty.toLowerCase());
		System.out.println(piaty.toString().toLowerCase());
		
		System.out.println("Zmienna czwarta ma d³ugoœæ: " + czwarty.length()); // zwraca d³ugoœæ ci¹gu znaków z naszej zmiennej
		
		System.out.println("Znak na indeksie 2 to: " + trzeci.charAt(2) + " natomiast na indeksie 5 to: " + trzeci.charAt(5)); // wypisuje znak z drugiego i pi¹tego indeksu zmiennej trzeci 
		// Uwaga je¿eli byœmy po³¹czyli trzeci.charAt(2) i trzeci.charAt(5) bez u¿ycia opsiów to wtedy zsumuje nam te wartoœci poniewa¿ kompilator pobiera numer znaku z tabeli ascii w którym siê znajduje dana literka i je¿eli jest plus + to je sumuje, a dodanie jakiegoœ stringa w procedurze system.out.println() przed sumowaniem charAt powoduje ¿e zwraca literke
		System.out.println("Znak na indeksie trzecim od koñca zmiennej czwarty to: " + czwarty.charAt((czwarty.length()-3))); // wypisuje znak 3 od koñca ze zmiennej czwarty, tutaj musimy najpierw u¿yæ po kropce polecenia length na zmiennej czwarty która zwróci nam iloœæ znaków w tej zmiennej i nastêpnie odejmujemy 3 ¿eby otrzymaæ znak na pozycji 3 od koñca
		
		System.out.println(czwarty.substring(0,czwarty.indexOf(" ")));
		
	}

}
