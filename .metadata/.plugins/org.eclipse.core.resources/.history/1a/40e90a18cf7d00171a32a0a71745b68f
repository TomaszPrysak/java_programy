package cwiczenie_J65;

import java.util.ArrayList;

public class Magazyn {

	String nazwa;
	int ilosc;
	double cena;
	
	ArrayList<Magazyn> listaProduktow = new ArrayList<>();
	
	public Magazyn(){}
	public Magazyn(String produkt, int ilosc, double cena) {
		super();
		this.nazwa = produkt;
		this.ilosc = ilosc;
		this.cena = cena;
		listaProduktow.add(this);
	}
	
	public void nazwaProduktu(String a){
		this.nazwa = a;
	}
	
	public void iloscProduktu(int a){
		this.ilosc = a;
	}
	
	public void cenaProduktu(double a){
		this.cena = a;
	}
	
	public String wypiszProdukt(){
		return "Produkt: " + this.nazwa + " , cena(jedn.): " + this.cena + " , iloœæ: " + this.ilosc;
	}
	
	public String wypiszCenyproduktow(){
		return "Produkt: " + this.nazwa + " , cena(jedn.): " + this.cena;
	}
	
	public void wypiszWszystkieprodukty(){
		for(Magazyn v: listaProduktow){
			System.out.println(v.wypiszProdukt() + "\n");
		}
	}
	
	public static void main(String[] args) {
		
		Magazyn monitor = new Magazyn("Monitor", 1, 500);
		
		System.out.println(monitor.wypiszProdukt());

	}

}
