package java_dzien_drugi_cwiczenia;

import java.io.FilterInputStream;
import java.util.Scanner;

public class Cwiczenie_J26 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(new FilterInputStream(System.in){
			@Override
			public void close(){};
		});
		
		System.out.println("Prosty kalkulator");
		System.out.println("Podaj x:");
		
		float x = input.nextFloat();
		
		System.out.println("Podaj y:");
		
		float y = input.nextFloat();
		
		System.out.println("Wybierz dzia³anie na wprowadzonych danych:");
		
		String znak = input.nextLine();
		
		switch(znak){
		
		case "+":
			System.out.println("Wybra³eœ dodawanie. Wynik dzia³ania to: " + (x+y));
			break;
			
		case "-":
			System.out.println("Wybra³eœ odejmowanie. Wynik dzia³ania to: " + (x-y));
			break;
			
		case "*":
			System.out.println("Wybra³eœ mno¿enie. Wynik dzia³ania to: " + (x*y));
			break;
			
		case "/":
			System.out.println("Wybra³eœ dzielenie. Wynik dzia³ania to: " + (x/y));
			break;
		}

	}

}
