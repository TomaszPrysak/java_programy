					try{
						System.out.println("Podaj drug¹ wartoœæ:");
						double y_input = input.nextDouble();
						o1.setY(y_input);
					} catch(InputMismatchException e){
						System.out.println("Nie czyta³eœ komunikatów na pocz¹tku programu. Podana wartoœæ nie jest liczb¹ zmiennoprzecinkow¹");
