package cwiczenie_J96;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Cwiczenie_J96 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		String [] liczby = new String [10];
		
		String dec;
		
		int index;
		
		int i = 0;
		
		while(true){
			System.out.println("Podaj element tablicy, (w) - wyjœcie");
			dec = input.nextLine();
			if(dec.equals("w")){
				break;
			}else{
				liczby[i] = dec;
				i++;
			}
		}
		
		while(true){
			try{
				System.out.println("Wybierz który element tablicy chcesz wyœwietliæ, (w) - wyjœcie");
				index = input.nextInt();
				if(index == 0){
					break;
				}
				System.out.println(liczby[index - 1]);
			}catch(InputMismatchException e){
				System.out.println("Nale¿y podaæ liczbê");
			}catch(ArrayIndexOutOfBoundsException e){
				System.out.println("Nie ma takiego indeksu");
			}
		}
		
		input.close();
		
	}

}
