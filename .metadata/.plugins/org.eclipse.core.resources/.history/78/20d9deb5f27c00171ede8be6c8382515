package programowanie_obiektowe;

public class AutoSklep {

	public static void main(String[] args) {
		
		System.out.println("Kupujê auto: ");
		Auto bmw = new Auto(4, "bia³y", "z³ote", "chrom", "BMW", "X5", 100000); // stworzenie obiektu klasy Auto która znajduje siê w tym samym pakiecie programowanie_obiektowe
		System.out.println("Kupi³eœ: " + bmw.marka + " " + bmw.model);
		System.out.println("Do zap³aty: " + bmw.cena);
		
		boolean rezultat = bmw instanceof Auto;
		System.out.println(rezultat);
		
		// wywo³ujemy metodê brutto z klasy Auto dla konkretnego obiektu
		double cena_brutto_rabat = bmw.brutto(); // mo¿emy wpisaæ bezpoœrednio argument wymagany przez metodê
		System.out.println(cena_brutto_rabat);
		
		cena_brutto_rabat = bmw.brutto(); // ale mo¿emy te¿ siê odwo³aæ do pola zdefiniowanego w momencie tworzenia obiektu
		System.out.println(cena_brutto_rabat);
		
		// wywo³ujemy metodê bruttoNetto z klasy Auto dla obiektu i tutaj uz nie musimy pózniej wywp³ywaæ printa bo ta metoda ju¿ ma w sobie system.out.print
		bmw.bruttoNetto();
		
		// System.out.println(bmw.brutto);
		
		System.out.println("Po rabacie: " + bmw.rabat());
		bmw.bruttoNetto();
	}

}
