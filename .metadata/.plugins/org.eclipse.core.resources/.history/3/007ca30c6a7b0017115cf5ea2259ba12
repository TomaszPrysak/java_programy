		System.out.println("  -----");
		System.out.println("C  | | ");
		
		System.out.println("Gracz A (krzy¿yk)");
		System.out.println("Podaj wspó³rzêdn¹ x (1-3) kó³ka:");
		int x = input.nextInt();
		System.out.println("Podaj wspó³rzêdn¹ y (A-B) kó³ka:");
		String y = input.nextLine();
		
		
		
		
	}

}
