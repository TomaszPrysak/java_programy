package cwiczenie_J68;

public class Punkt2D {

	int x, y;

	public Punkt2D(int x, int y) {
		super();
		this.x = x;
		this.y = y;
	}

	public Punkt2D() {
		super();
		this.x = 0;
		this.y = 0;
	}
	
	public void Przesuniecie(int a, int b){
		x = x + a;
		y = y + b;
		System.out.println("Wspó³rzêdna x: " + this.x + "\nWspó³rzêdna y: " + this.y);
	}
	
}
